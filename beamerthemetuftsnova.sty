% Use a custom counter for footnotes.
\newcounter{customfootnote}
% Create a new box to store footnotes
\newbox\footnotebox
\setbox\footnotebox=\vbox{}
% Redefine the \footnote command to store footnotes
\renewcommand{\footnote}[1]{%
  \stepcounter{customfootnote}%
  \global\setbox\footnotebox=\vbox{%
    \unvbox\footnotebox%
    \hbox{\tiny{\arabic{customfootnote}: #1}}%
  }%
  \hbox{\textsuperscript{\arabic{customfootnote}}}%
}
